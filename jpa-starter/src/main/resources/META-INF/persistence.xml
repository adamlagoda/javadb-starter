<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <!-- Początek konfiguracji dla PersistenceUnit o nazwie: 'org.example.jpa.starter.lifecycle' -->
    <persistence-unit name="org.example.jpa.starter.lifecycle">
        <!-- lista klas do mapowania do bazy danych -->
        <class>org.example.jpa.starter.lifecycle.CourseEntity</class>

        <!-- domyślnie mechanizmy JPA skanują wszystkie dostępne pakiety i dodają do PU encje które znajdą - ta opcja wyłącza tę funkcjonalność -->
        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>

            <!-- ustawienia połączenie do bazy danych -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <!-- url (adres) do bazy danych -->
            <!-- zobacz komentarz w klasie ConnectionViaDriverManager do DB_URL -->
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/jpa_test?allowPublicKeyRetrieval=true&amp;useSSL=false&amp;serverTimezone=Europe/Warsaw"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>

            <!-- Uwaga - przy nazwach parametrów specyficznych dla Hibernate dodajemy prefix hibernate. !-->
            <!-- wyświetlamy na konsolę wszystkie zapytania SQL, które wywołuje dla nas Hibernate -->
            <property name="hibernate.show_sql" value="true"/>

            <!-- http://docs.jboss.org/hibernate/orm/5.0/userguide/html_single/Hibernate_User_Guide.html#configurations-hbmddl -->
            <!-- opcja 'create' = usuń i odwtórz strukturę bazy danych przy starcie aplikacji, inne opcje: 'create-only', 'create-drop', 'drop', 'none' -->
            <property name="hibernate.hbm2ddl.auto" value="none"/>

            <!-- SQL dialekt -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="org.example.jpa.starter.relations">
        <class>org.example.jpa.starter.relations.StudentEntity</class>
        <class>org.example.jpa.starter.relations.AddressEntity</class>
        <class>org.example.jpa.starter.relations.SkillEntity</class>
        <class>org.example.jpa.starter.relations.CourseEntity</class>
        <class>org.example.jpa.starter.relations.SeatEntity</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/jpa_relations_test?allowPublicKeyRetrieval=true&amp;useSSL=false&amp;serverTimezone=Europe/Warsaw"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="org.example.jpa.starter.queries">
        <class>org.example.jpa.starter.queries.entities.StudentEntity</class>
        <class>org.example.jpa.starter.queries.entities.SeatEntity</class>
        <class>org.example.jpa.starter.queries.entities.AddressEntity</class>
        <class>org.example.jpa.starter.queries.entities.SkillEntity</class>
        <class>org.example.jpa.starter.queries.entities.CourseEntity</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/jpa_queries_test?allowPublicKeyRetrieval=true&amp;useSSL=false&amp;serverTimezone=Europe/Warsaw"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="org.example.jpa.starter.inheritance">
        <class>org.example.jpa.starter.inheritance.Coach</class>
        <class>org.example.jpa.starter.inheritance.Student</class>
        <class>org.example.jpa.starter.inheritance.Course</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/jpa_inheritance_test?allowPublicKeyRetrieval=true&amp;useSSL=false&amp;serverTimezone=Europe/Warsaw"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
        </properties>
    </persistence-unit>

</persistence>
